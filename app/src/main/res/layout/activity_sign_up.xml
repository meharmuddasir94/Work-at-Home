<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/sddf"
        android:scaleType="fitXY"
        android:layout_marginTop="-20dp"
        android:id="@+id/top"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"/>


    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="330dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@id/top"
        android:layout_marginTop="-70dp"
        android:background="@drawable/edit"
        >
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/rl1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"

            android:background="@drawable/border">
            <EditText
                android:layout_width="270dp"
                android:layout_height="41dp"
                android:id="@+id/name"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="50dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="4dp"
                android:hint="Name"
                android:textColorHint="@color/colorout"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/name"
                android:layout_marginRight="-38dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_perm_identity_black_24dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/rl3"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">
            <EditText
                android:layout_width="270dp"
                android:layout_height="41dp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="50dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="4dp"
                android:hint="Email"
                android:textColorHint="@color/colorout"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/email"
                android:layout_marginRight="-38dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_baseline_alternate_email_24" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/rl3"
            android:id="@+id/rl4"
            android:layout_marginTop="14dp"
            android:background="@drawable/border">
            <EditText
                android:layout_width="270dp"
                android:layout_height="41dp"
                android:id="@+id/pass"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:background="@color/colorWhite"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/colorout"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/pass"
                android:layout_marginRight="-38dp"
                android:layout_marginTop="12dp"

                android:src="@drawable/ic_lock_outline_black_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pass"
                android:id="@+id/show"
                android:text="SHOW"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorred"
                android:layout_marginLeft="-45dp"

                android:layout_marginTop="16dp"

                android:src="@drawable/ic_baseline_remove_red_eye_24" />

        </RelativeLayout>
        <Button
            android:layout_width="320dp"
            android:layout_marginTop="24dp"
            android:layout_height="56dp"
            android:hint="Sign Up"
            android:textSize="16sp"
            android:textColorHint="@color/colorWhite"
            android:layout_marginLeft="34dp"

            android:background="@drawable/grrad"
            android:id="@+id/btn2"
            android:layout_below="@id/rl4"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2"
            android:layout_marginTop="14dp"

            android:paddingRight="28dp"
            android:text="If u already have account? then   "
            android:textAlignment="center"
            android:textColor="@color/colorot" />


        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2"
            android:layout_marginTop="14dp"
android:onClick="log"
            android:paddingRight="50dp"
            android:text="Click Here"

            android:textAlignment="textEnd"
            android:textColor="@color/colorred"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>
